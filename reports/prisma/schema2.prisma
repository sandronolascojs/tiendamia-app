generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Sku {
    sku    String  @id
    offers Offer[]
}

model Offer {
    id              Int      @id @default(autoincrement())
    price           Decimal
    stock           Int
    shipping_price  Decimal
    delivery_date   DateTime
    can_be_refunded Boolean
    status          String
    guarantee       Boolean
    sku             Sku      @relation(fields: [skuId], references: [sku])
    skuId           String
    seller          Seller   @relation(fields: [sellerId], references: [id])
    sellerId        Int
}

model Seller {
    id               Int     @id @default(autoincrement())
    name             String
    qualification    Int
    reviews_quantity Int
    offers           Offer[]
}

model Product {
    id      Int    @id @default(autoincrement())
    skuId   String
    name    String
    offerId Int[]
}
